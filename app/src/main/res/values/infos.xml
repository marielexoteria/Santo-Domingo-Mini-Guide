    <!-- Info related to Sights > Alcázar de Colón -->
    <string name="sight1_name">Alcázar de Colón</string>
    <string name="sight1_address_text">Plaza de España, Calle Las Damas</string>
    <string name="sight1_opening_hours">Tuesday to Sunday 9:00 am to 5:00 pm</string>
    <string name="sight1_description">The oldest Viceregal residence in the Americas, built in Gothic and
        Renaissance style around 1512 for Christopher Columbus\’ son Diego and his wife,
        Maria de Toledo. The expeditions and conquest of the Americas were planned from here.</string>
    <string name="sight1_phone_number">+1 809&#8211;687&#8211;5361</string>
    <string name="sight1_website">www.godominicanrepublic.com</string>
