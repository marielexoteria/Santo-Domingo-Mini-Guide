<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarTabStyle">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- App bar style -->
    <style name="AppBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Remove the shadow below the app bar -->
        <item name="elevation">@dimen/app_bar_elevation</item>

    </style>

    <!-- Style for a tab that displays a category name. Changing the bg color of
    the indicator tab (here + activity_tourist_guide.xml)
    from https://stackoverflow.com/questions/31640563/how-do-i-change-a-tab-background-color-when-using-tablayout -->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabBackground">@drawable/tab_color_selector</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <!-- Text appearance style for a category tab -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Styles used in the practical info section of tourist_tip_details.xml
    as per suggestion of the reviewer of the app -->
    <style name="practical_info_style_portrait">
        <item name="android:layout_marginTop">@dimen/margin_top_details_screen</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_details_screen</item>
        <item name="android:layout_marginRight">@dimen/margin_left_details_screen</item>
    </style>

    <style name="practical_info_style_landscape">
        <item name="android:layout_marginTop">@dimen/margin_top_details_screen</item>
        <item name="android:layout_marginLeft">@dimen/margin_horizontal_details_screen_land</item>
        <item name="android:layout_marginRight">@dimen/margin_horizontal_details_screen_land</item>
    </style>

</resources>